<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="lubazone" translate="label" sortOrder="100">
            <label>Luba Zone</label>
        </tab>
        <section id="footer_block" translate="label" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Cms Block In Footer</label>
            <tab>lubazone</tab>
            <resource>LubaZone_CmsBlockInFooter::config</resource>

            <group id="general" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General</label>
                <field id="active" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1" >
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                
            </group>
        </section>
    </system>
</config>
